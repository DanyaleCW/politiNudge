{
  "name": "polinudge",
  "version": "1.0.0",
  "description": "Replace images with information on social impact groups and events.",
  "manifest_version" : 2,
  "web_accessible_resources" : ["images/img1.jpg", "images/puppy.png"],
  "browser_action" : { 
	"default_popup": "popup.html"
    },
  "permissions" : ["activeTab"],
  "content_scripts" : [
    { 
      "matches" : ["*://*.nytimes.com/*"], 
      "js" : ["content.js"],
	  "run_at": "document_idle",
	  "all_frames": true
    }
  ]
}
